@{
  Layout = "_Layout";
}

@using KabloomClient.ViewModels

@model LoginViewModel


<h2>Login with your account:</h2>
<hr />
@using (Html.BeginForm())
{
  @Html.LabelFor(m => m.Email, new { @class = "helper"})
  <br>
  @Html.TextBoxFor(m => m.Email, new { @class = "helper"})
  <br>
  <br>
  @Html.LabelFor(m => m.Password, new { @class = "helper"})
  <br>
  @Html.PasswordFor(m => m.Password, new { @class = "helper"})
  <br>
  <br>
  <input type="submit" value="Log in" class="btn btn-default" />
  <br>
  <p class="w-nav-link">@Html.ActionLink("Back To Home", "Index", "Home")</p>
}