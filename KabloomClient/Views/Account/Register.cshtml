@{
    Layout = "_Layout";
}

@using KabloomClient.ViewModels

@model RegisterViewModel

<h2> Register a new user</h2>
<hr />
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.LabelFor(user => user.UserName, new { @class = "helper"})
    <br>
    @Html.TextBoxFor(user => user.UserName, new { @class = "helper"})
    <br>
    <br>
    @Html.LabelFor(user => user.UserRegion, new { @class = "helper"})
    <br>
    @Html.TextBoxFor(user => user.UserRegion, new { @class = "helper"})
    <br>
    <br>    
    @Html.LabelFor(user => user.Email, new { @class = "helper"})
    <br>
    @Html.TextBoxFor(user => user.Email, new { @class = "helper"})
    <br>
    <br>
    @Html.LabelFor(user => user.Password, new { @class = "helper"})
    <br>
    @Html.PasswordFor(user => user.Password, new { @class = "helper"})
    <br>
    <br>
    @Html.LabelFor(user => user.ConfirmPassword, new { @class = "helper"})
    @Html.PasswordFor(user => user.ConfirmPassword, new { @class = "helper"})
    <br>
    <br>
    <input type="submit" value="Register" class="btn btn-default"/>
    <br>
    <p class="w-nav-link">@Html.ActionLink("Back To Home", "Index", "Home")</p>
}